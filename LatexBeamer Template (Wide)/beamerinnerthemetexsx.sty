%%Authorname,Title,Date

\defbeamertemplate*{title page}{texsx}[1][]
{ 
   \ifx\insertsubtitle\@empty%
		%without subtitle
		\vskip2.9cm%
		\begin{beamercolorbox}[wd=12.75cm,right,sep=8pt,#1]{title page header}
			\usebeamerfont{title}\inserttitle\par%%
		\end{beamercolorbox}%
		  \vskip2.75cm%
		\begin{beamercolorbox}[wd=12.75cm,leftskip=2.25cm,#1]{author}
			\usebeamerfont{author}\insertauthor%
		\end{beamercolorbox}
			\vskip0.15cm%
		\begin{beamercolorbox}[wd=12cm,leftskip=2.25cm,#1]{author}
			\usebeamerfont{author}\insertinstitute%
		\end{beamercolorbox}
			\vskip0.15cm%
		\begin{beamercolorbox}[wd=12cm,leftskip=2.25cm,#1]{date}
			\usebeamerfont{author}\insertdate%
		\end{beamercolorbox}
		
		%with subtitle
		\else%
			\vskip2.9cm%
			\begin{beamercolorbox}[wd=12cm,right,sep=8pt,#1]{title page header}
				\usebeamerfont{title}\inserttitle\par%%
			\end{beamercolorbox}%
			\vskip0.4cm%
			\begin{beamercolorbox}[wd=12cm,right,sep=8pt,#1]{title page header}
				\usebeamerfont{subtitle}\insertsubtitle\par%%
			\end{beamercolorbox}%
			    %\vspace*{\fill}
			\vskip1.7cm%
			\begin{beamercolorbox}[wd=12cm,leftskip=2.25cm,#1]{author}
			\usebeamerfont{author}\insertauthor%
			\end{beamercolorbox}
			\vskip0.15cm%
			\begin{beamercolorbox}[wd=12cm,leftskip=2.25cm,#1]{author}
			\usebeamerfont{author}\insertinstitute%
			\end{beamercolorbox}
			\vskip0.15cm%
			\begin{beamercolorbox}[wd=12cm,leftskip=2.25cm,#1]{date}
			\usebeamerfont{author}\insertdate%
			\end{beamercolorbox} 
			%\vskip-0.75cm%
		\fi
}

